                        android:id="@+id/reptweet3"/>

                </LinearLayout>
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/more_info_blue"
                    android:id="@+id/info_btn3"
                    android:gravity="end"
                    android:layout_gravity="center_vertical|end"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ccc" />

            <!-- Fourth Representative -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/extra_rep"
                android:orientation="horizontal">

                <judy.represent.RoundedImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rep4" />

                <LinearLayout
                    android:id="@+id/repinfo4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chris Van Hollen"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/repname4"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Democrat"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repparty4"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="vanhollen@maryland.gov"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repemail4"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="vanhollen.senate.gov"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repwebsite4"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\@SenatorVanHollen"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/reptwitter4"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true"
                        android:textSize="14sp"
                        android:background="#66ffffff"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/reptweet4"/>

                </LinearLayout>
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/more_info_blue"
                    android:id="@+id/info_btn4"
                    android:gravity="end"
                    android:layout_gravity="center_vertical|end"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>