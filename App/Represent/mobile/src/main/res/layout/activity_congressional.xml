<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:twittersdk="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7.5dp"
            android:background="@drawable/back_btn_blue"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/r_logo"/>
    </FrameLayout>

    <!-- Divider -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#ccc" />

    <!-- Page -->
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- First Representative -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <judy.represent.RoundedImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rep1" />

                <LinearLayout
                    android:id="@+id/repinfo1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Barbara Mikulski"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/repname1"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Republican"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repparty1"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mikulski@maryland.gov"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repemail1"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="mikulski.senate.gov"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repwebsite1"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\@SenatorBarb"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/reptwitter1"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true"
                        android:textSize="14sp"
                        android:background="#66ffffff"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/reptweet1"/>

                </LinearLayout>
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/more_info_blue"
                    android:id="@+id/info_btn1"
                    android:gravity="end"
                    android:layout_gravity="center_vertical|end"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#ccc" />

            <!-- Second Representative -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <judy.represent.RoundedImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rep2" />

                <LinearLayout
                    android:id="@+id/repinfo2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Benjamin Cardin"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/repname2"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Democrat"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repparty2"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="bencardin@maryland.gov"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repemail2"
                        android:gravity="top|center_horizontal"/>

                    <judy.represent.MainTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cardin.senate.gov"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:id="@+id/repwebsite2"
